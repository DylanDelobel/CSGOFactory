{% extends "FOSUserBundle::layout.html.twig" %}

{% block stylesheets %}
    <link href="{{ asset('css/shop/confirmedEmail.css') }}" rel="stylesheet" type="text/css">
{% endblock %}


{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
    <div class="container" id="contenu">
        <div class="row">
            <div class="col-sm-offset-3 col-lg-offset-3 col-md-offset-3 col-sm-6 col-lg-6 col-md-6 alert alert-success">
                <p id="text">Congratulation {{ user.username }}, your registration is now complete.</p>
            </div>
        </div>
        <div class="row">
            <div class="well col-sm-offset-3 col-lg-offset-3 col-md-offset-3 col-sm-6 col-lg-6 col-md-6">
                <p>To connect, click on <a href="{{ path('fos_user_security_login') }}">Login</a>.</p>
            </div>
        </div>
    </div>

    {% if targetUrl %}

        <p><a href="{{ targetUrl }}"></a></p>
    {% endif %}


{% endblock fos_user_content %}
