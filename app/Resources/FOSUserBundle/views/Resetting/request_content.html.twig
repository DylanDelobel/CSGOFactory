{% trans_default_domain 'FOSUserBundle' %}

{% block stylesheets %}
    <link href="{{ asset('css/changePassword/requestPassword.css') }}" rel="stylesheet" type="text/css">
{% endblock %}



<div class="container">
    <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
        <div class="row">
            <div class="col-sm-offset-3 col-lg-offset-3 col-md-offset-3">
                <h2 class="logo">Resetting my password :</h2>
            </div><br/>
        </div>
        <div class="well col-sm-offset-3 col-lg-offset-3 col-md-offset-3 col-sm-6 col-lg-6 col-md-6">
            <div class="row">
                <div class="form-group" id="email">
                    <div class="col-sm-offset-1 col-lg-offset-1 col-md-offset-1 col-sm-10 col-lg-10 col-md-10">
                        <label for="username">{{ 'Username'|trans }}</label>
                        <input type="text" id="username" name="username" required="required" class="form-control"/>
                    </div>
                </div>
            </div><br>
            <div class="col-sm-offset-8 col-lg-offset-8 col-md-offset-8 ">
                <input type="submit" value="{{ 'Change password'|trans }}" class="btn btn-info" />
            </div>

        </div>

    </form>
</div>
