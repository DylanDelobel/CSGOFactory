{% extends 'AppBundle::layout.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('css/shop/homepage.css') }}" rel="stylesheet">
{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <h2>List of crates</h2>
                        <ul>
                            {% for crate in crateList %}
                                <li>
                                    {{ crate.name }}
                                    <a href="{{ path('admin.crate.edit', {id: crate.id} ) }}">Edit</a>
                                </li>
                            {% endfor %}
                        </ul>
                            <a href="{{ path('admin.crate.add') }}"><button class="btn btn-primary">Add crate</button></a>
                    </div>
                </div>
                <a href="{{ path('admin') }}"><button class="btn btn-primary">Back</button></a>
            </div>
        </div>
    </div>
{% endblock %}
