{% extends 'AppBundle::layout.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('css/shop/homepage.css') }}" rel="stylesheet" type="text/css">
{% endblock %}


{% block content %}

    {#{{ dump(user) }}#}

    <div class="container">
        <div class="col-sm-offset-3 col-md-offset-3 col-lg-offset-3 col-sm-6 col-md-6 col-lg-6">
            <div class="row" id="titreUpdateProfile">
                <h2>My informations : </h2>
            </div>

            <!-- Row erreur formulaire -->
            <div class="row">
                <div class="col-sm-offset-3 col-md-offset-3 col-lg-offset-3 col-sm-6 col-md-6 col-lg-6">
                    {% for flashMessage in app.session.flashbag.get('updateUser') %}
                        <div class="alert {% if result == 0 %} alert-success {% elseif result == 1 %} alert-danger {% endif %}" style="text-align: center">
                            <p>{{ flashMessage }}</p>
                        </div>
                    {% endfor %}
                </div>
            </div>
            <!-- Row erreur formulaire -->
            <div class="row">
                <div class="col-sm-offset-3 col-md-offset-3 col-lg-offset-3 col-sm-6 col-md-6 col-lg-6">
                    {% for flashMessage in app.session.flashbag.get('updateUserFalse') %}
                        <div class="alert {% if result == 0 %} alert-danger {% endif %}" style="text-align: center">
                            <p>{{ flashMessage }}</p>
                        </div>
                    {% endfor %}
                </div>
            </div>

            <div class="panel panel-default">
                <div class="panel-body">
                    {{ form_start(form) }}
                    {{ form_errors(form) }}

                    <div class="col-sm-offset-1 col-md-offset-1 col-lg-offset-1 col-sm-10 col-md-10 col-lg-10">
                        <div class="row">
                            {{ form_row(form.username) }}
                        </div>

                        <div class="row">
                            {{ form_row(form.email) }}
                        </div>

                        <div class="row">
                            {% for flashMessage in app.session.flashbag.get('errorMdp') %}
                                <div class="col-sm-offset-1 col-lg-offset-1 col-md-offset-1 col-sm-10 col-lg-10 col-md-10">
                                    <div class="alert alert-danger">
                                        <p>{{ flashMessage }}</p>
                                    </div>
                                </div>
                            {% endfor %}
                            {{ form_row(form.password) }}
                        </div>

                        <div class="row">
                            {% for flashMessage in app.session.flashbag.get('errorRepeatMdp') %}
                                <div class="col-sm-offset-1 col-lg-offset-1 col-md-offset-1 col-sm-10 col-lg-10 col-md-10">
                                    <div class="alert alert-danger">
                                        <p>{{ flashMessage }}</p>
                                    </div>
                                </div>
                            {% endfor %}
                            {{ form_row(form.repeatPassword) }}
                        </div>

                        <div class="col-sm-offset-8 col-md-offset-8 col-lg-offset-8">
                            {{ form_row(form.submit) }}
                        </div>
                    </div>


                    {{ form_end(form) }}
                </div>
            </div>

        </div>
    </div>

    <div class="footerSpace"></div>

{% endblock %}
