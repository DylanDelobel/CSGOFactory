<html>
<head>
    <title>Order CSGOFactory</title>

    <style>
        .invoice-box{
            max-width:800px;
            margin:auto;
            padding:30px;
            border:1px solid #eee;
            box-shadow:0 0 10px rgba(0, 0, 0, .15);
            font-size:16px;
            line-height:24px;
            font-family:'Helvetica Neue', 'Helvetica', Helvetica, Arial, sans-serif;
            color:#555;
        }

        .invoice-box table{
            width:100%;
            line-height:inherit;
            text-align:left;
        }

        .invoice-box table td{
            padding:5px;
            vertical-align:top;
        }

        .invoice-box table tr td:nth-child(2){
            text-align:right;
        }

        .invoice-box table tr.top table td{
            padding-bottom:20px;
        }

        .invoice-box table tr.top table td.title{
            font-size:45px;
            line-height:45px;
            color:#333;
        }

        .invoice-box table tr.information table td{
            padding-bottom:40px;
        }

        .invoice-box table tr.heading td{
            background:#eee;
            border-bottom:1px solid #ddd;
            font-weight:bold;
        }

        .invoice-box table tr.details td{
            padding-bottom:20px;
        }

        .invoice-box table tr.item td{
            border-bottom:1px solid #eee;
        }

        .invoice-box table tr.item.last td{
            border-bottom:none;
        }

        .invoice-box table tr.total td:nth-child(2){
            border-top:2px solid #eee;
            font-weight:bold;
        }

        @media only screen and (max-width: 600px) {
            .invoice-box table tr.top table td{
                width:100%;
                display:block;
                text-align:center;
            }

            .invoice-box table tr.information table td{
                width:100%;
                display:block;
                text-align:center;
            }
        }
    </style>
</head>

<body>
<div class="invoice-box">
    <table cellpadding="0" cellspacing="0">
        <tr class="top">
            <td>
                <table>
                    <tr>
                        <td class="title">
                            <img src="http://image.noelshack.com/fichiers/2016/50/1481825883-csgofacoty.png" style="width:100%; max-width:300px;">
                        </td>
                    </tr>
                </table>
            </td>
        </tr>

        <tr class="information">
            <td >
                <address>
                    <h4><strong>Address Delivery</strong></h4>
                    <strong>{{ order.listOrder.Delivery.firstName }} {{ order.listOrder.Delivery.lastName }}</strong>
                    <br>
                    {{ order.listOrder.Delivery.adresse}}
                    <br>
                    {{ order.listOrder.Delivery.cp }} {{ order.listOrder.Delivery.city }} - {{ order.listOrder.Delivery.country }}
                    <br>
                    <abbr title="Phone">P:</abbr> {{ order.listOrder.Delivery.phone }}
                </address>


            </td>
            <td></td>
            <td></td>
            <td>
                <address>
                    <h4><strong>Address Billing</strong></h4>
                    <strong>{{ order.listOrder.Billing.firstName }} {{ order.listOrder.Billing.lastName }}</strong>
                    <br>
                    {{ order.listOrder.Billing.adresse}}
                    <br>
                    {{ order.listOrder.Billing.cp }} {{ order.listOrder.Billing.city }} - {{ order.listOrder.Billing.country }}
                    <br>
                    <abbr title="Phone">P:</abbr> {{ order.listOrder.Billing.phone }}
                </address>
            </td>
        </tr>
        <tr>
            <td></td>
            <td></td>
            <td></td>
        </tr>

        <tr class="heading">
            <td>
                Weapons
            </td>
            <td>
                Quantity
            </td>
            <td>
                PriceHT
            </td>
            <td>
                PriceTTC
            </td>
        </tr>

        {% for Weapons in order.listOrder.weapons  %}
        <tr class="item">
            <td>
                {{ Weapons.Name }}
            </td>
            <td>
                {{ Weapons.quantite }}
            </td>
            <td>
                {{ Weapons.prixHT }} €
            </td>
            <td>
                {{ Weapons.prixTTC }} €
            </td>
        </tr>
        {% endfor %}

        <tr>
            <td></td>
            <td></td>
            <td></td>

            <td>
                <strong>TotalHT:</strong> {{ order.listOrder.prixHT}} €
            </td>
        </tr>
        <tr>
            <td></td>
            <td></td>
            <td></td>

            <td>
                <strong>Tax:</strong> {{ order.listOrder.prixHT *0.20}} €
            </td>
        </tr>
        <tr>
            <td></td>
            <td></td>
            <td></td>

            <td>
                <strong>TotalTTC:</strong> {{ order.listOrder.prixTTC}} €
            </td>
        </tr>
    </table>
</div>
</body>
</html>