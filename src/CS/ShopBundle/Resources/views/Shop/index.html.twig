{% extends 'ShopBundle::layout.html.twig' %}

{% block stylesheets %}
	<link href="{{ asset('css/shop/homepage.css') }}" rel="stylesheet">
{% endblock %}

{% block content %}

 <!-- Page Content -->
<div class="container">

    <div class="row">

        <div class="col-md-3">


            <div class="well">
                <p class="lead">Filter</p>
                {{ form(form) }}
            </div>
            <div>

                <P>{{ search }}</P>
                <P>{{ wear }}</P>
                <P>{{ priceMin }}</P>
                <P>{{ priceMax }}</P>

            </div>
        </div>

        <div class="col-md-9">
                    <div class="row">
                        {% if listWeapons is empty %}
                            <div class="col-xs-12 col-sm-12 col-lg-12 col-md-12">


                                <div class="text-center caption">
                                    <h2>No item in the database</h2>
                                    <p>The database is empty, Please wait or contact an administrator.</p>
                                </div>
                            </div>
                            <hr class="col-xs-12 col-sm-12 col-lg-12 col-md-12">
                        {% else %}
                            {% for Weapons in listWeapons %}
                                <div class="col-xs-12 col-sm-12 col-lg-12 col-md-12">

                                    <div class="col-xs-12 col-sm-4 col-lg-4 col-md-4">
                                        <img class="imageShop" src="{{ Weapons.image.path }}" alt="">
                                    </div>

                                    <div class="col-xs-12 col-sm-6 col-lg-6 col-md-6">
                                        <div class="caption">
                                            <h4><a href="#">{{ Weapons.name }}</a>
                                            </h4>
                                            <p>This is a short description. Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
                                        </div>
                                        <div class="ratings">

                                            <p>
                                                <span class="glyphicon glyphicon-star"></span>
                                                <span class="glyphicon glyphicon-star"></span>
                                                <span class="glyphicon glyphicon-star"></span>
                                                <span class="glyphicon glyphicon-star"></span>
                                                <span class="glyphicon glyphicon-star"></span>
                                            </p>
                                        </div>
                                    </div>

                                    <div class="col-xs-12 col-sm-2 col-lg-2 col-md-2">
                                        <div class="caption">
                                            <h4>{{ Weapons.price }} â‚¬</h4>
                                        </div>
                                        <div class="red">


                                            <a class="btn btn-default" href="{{ path('cart_add',{'id' : Weapons.id }) }}">
                                                <span class="glyphicon glyphicon-shopping-cart"></span> Add Cart
                                            </a>
                                        </div>
                                    </div>
                                    <hr class="col-xs-12 col-sm-12 col-lg-12 col-md-12">

                                </div>
                            {% endfor %}
                        {% endif %}
                    </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-offset-3">
                <table>
                    <tr>
                        <td colspan="2">
                            {{ pagination(listWeapons) }}
                        </td>
                    </tr>
                </table>
            </div>

        </div>
    </div>

    <div class="well">
        {{ form(form) }}
    </div>


    <!-- /.container -->


{% endblock %}

